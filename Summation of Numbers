n=int(input("Enter a Number: "))
a=[]

for i in range (1, n+1):
    #print(i)
    a.append(i)
    for j in range (1,i+1):
        print(j, end=" ")
        if (j < i):
            print("+", end=" ")
        else:
            print("=", sum(a))
print(a)
